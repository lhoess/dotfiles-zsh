# Pure custom git alias that suits my preference. This has no relevance to any other git alias that you may have seen from somewhere else 

alias g='git';
alias gb='git branch';
alias gba='git branch -a';
alias gcl='git clone --recursive';
alias gs='git status';
alias gcm='git checkout master';
alias gcd='git checkout develop';
alias gco='git checkout';
alias gcb='git checkout -b';
alias ga='git add';
alias gaa='git add --all';
alias gc='git commit -s';
alias gf='git fetch';
alias gfa='git fetch --all';
alias gl='git pull';
alias gla='git pull --all';
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gp='git push';
alias gd='git diff';
alias gm='git merge';

# Miscellaneous aliases
alias ll="ls -la";

# Custom directory aliases
if [[ "$OSTYPE" == 'linux-gnu' ]]; then
  alias htdocs='cd /var/www/htdocs';
fi

alias projects='cd ~/Projects';
alias sites='cd ~/Sites';

# Laravel Alias
alias pa="php artisan";
alias pa:tinker="php artisan tinker";
